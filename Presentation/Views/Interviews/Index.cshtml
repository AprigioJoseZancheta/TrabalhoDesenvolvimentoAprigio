@model IEnumerable<Domain.InterviewDomain.Interview>

@{
    ViewBag.Title = "Index";
}

<h3>Entrevistas</h3>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome Candidato")
        </th>
        <th>
            @Html.DisplayName("Local")
        </th>
        <th>
            @Html.DisplayName("Comentário")
        </th>
        <th>
            @Html.DisplayName("Data da Entrevista")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Candidate.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Local)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInterview)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
