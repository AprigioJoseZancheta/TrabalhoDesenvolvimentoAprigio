@model Domain.InterviewDomain.Interview

@{
    ViewBag.Title = "Delete";
}

<h4>Deletar</h4>

<h3>Tem certeza que deseja excluir esta entrevista?</h3>
<div>
    <h4>Entrevista</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome Candidato")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Candidate.Name)
        </dd>

        <dt>
            @Html.DisplayName("Local")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Local)
        </dd>

        <dt>
            @Html.DisplayName("Comentário")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            @Html.DisplayName("Data da Entrevista")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataInterview)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar à Lista", "Index")
        </div>
    }
</div>
